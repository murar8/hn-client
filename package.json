    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.4",
    "@types/css-mediaquery": "^0.1.1",
    "@types/jest": "^27.4.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@types/react-router-dom": "^5.1.8",
    "cross-env": "^7.0.3",
    "css-mediaquery": "^0.1.2",
    "firebase": "^9.6.9",
    "framer-motion": "^6.2.8",
    "husky": "^7.0.1",
    "immutable": "^4.0.0-rc.14",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.3.7",
    "lodash.debounce": "^4.0.8",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.3",
    "react-icons": "^4.2.0",
    "react-query": "^3.23.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "5.0.0",
    "react-virtuoso": "^2.8.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cross-env TZ=UTC LC_ALL=en_US.UTF-8 react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "resetMocks": false,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index\\.(ts|tsx|js|jsx)",
      "<rootDir>/src/config/.*\\.(ts|tsx|js|jsx)",
      "<rootDir>/src/serviceWorkerRegistration.ts",
      "<rootDir>/src/service-worker.ts"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "**/*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
